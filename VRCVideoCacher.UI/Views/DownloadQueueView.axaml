<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:VRCVideoCacher.UI.ViewModels"
             xmlns:mi="using:Material.Icons.Avalonia"
             x:Class="VRCVideoCacher.UI.Views.DownloadQueueView"
             x:DataType="vm:DownloadQueueViewModel">

    <Grid RowDefinitions="Auto, Auto, Auto, *, Auto" Margin="10">
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0,0,0,20">
            <TextBlock Text="Download Queue" FontSize="24" FontWeight="Bold"/>
            <Button Grid.Column="1" Command="{Binding RefreshQueueCommand}" ToolTip.Tip="Refresh">
                <mi:MaterialIcon Kind="Refresh" Width="20" Height="20"/>
            </Button>
        </Grid>

        <!-- Current Download -->
        <Border Grid.Row="1" Background="#2d2d2d" CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <StackPanel Spacing="10">
                <TextBlock Text="Current Download" FontWeight="SemiBold" FontSize="16"/>

                <Grid ColumnDefinitions="Auto, *, Auto" IsVisible="{Binding CurrentDownload, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <mi:MaterialIcon Grid.Column="0" Kind="Download" Width="24" Height="24" Foreground="#64B5F6"/>
                    <StackPanel Grid.Column="1" Margin="15,0">
                        <TextBlock Text="{Binding CurrentDownload.VideoId}" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding CurrentDownload.UrlType}" Foreground="#888888" FontSize="12"/>
                    </StackPanel>
                    <TextBlock Grid.Column="2" Text="{Binding CurrentStatus}" VerticalAlignment="Center"/>
                </Grid>

                <TextBlock Text="No active download"
                           IsVisible="{Binding CurrentDownload, Converter={x:Static ObjectConverters.IsNull}}"
                           Foreground="#888888"/>
            </StackPanel>
        </Border>

        <!-- Manual Download -->
        <Border Grid.Row="2" Background="#2d2d2d" CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <StackPanel Spacing="10">
                <TextBlock Text="Add Manual Download" FontWeight="SemiBold" FontSize="16"/>

                <Grid ColumnDefinitions="*, Auto">
                    <TextBox Grid.Column="0" Text="{Binding ManualUrl}" Watermark="Enter video URL..."/>
                    <Button Grid.Column="1" Command="{Binding AddManualDownloadCommand}" Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <mi:MaterialIcon Kind="Plus" Width="16" Height="16"/>
                            <TextBlock Text="Add"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <TextBlock Text="{Binding StatusMessage}"
                           IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                           Foreground="#81C784" FontSize="12"/>
            </StackPanel>
        </Border>

        <!-- Queue List -->
        <Border Grid.Row="3" Background="#2d2d2d" CornerRadius="8" Padding="20">
            <Grid RowDefinitions="Auto, *">
                <TextBlock Grid.Row="0" Text="Queued Downloads" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>

                <ListBox Grid.Row="1"
                         ItemsSource="{Binding QueuedDownloads}"
                         Background="Transparent"
                         IsVisible="{Binding QueuedDownloads.Count, Converter={x:Static vm:GreaterThanZeroConverter.Instance}}">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:DownloadItemViewModel}">
                            <Grid ColumnDefinitions="Auto, *, Auto" Margin="5">
                                <mi:MaterialIcon Grid.Column="0" Kind="Clock" Width="20" Height="20" Foreground="#888888"/>
                                <StackPanel Grid.Column="1" Margin="15,0">
                                    <TextBlock Text="{Binding VideoId}" FontWeight="SemiBold"/>
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <TextBlock Text="{Binding UrlType}" Foreground="#888888" FontSize="12"/>
                                        <TextBlock Text="{Binding Format}" Foreground="#888888" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock Grid.Row="1"
                           Text="Queue is empty"
                           Foreground="#888888"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           IsVisible="{Binding !QueuedDownloads.Count}"/>
            </Grid>
        </Border>

        <!-- Status -->
        <TextBlock Grid.Row="4" Text="{Binding CurrentStatus}" Margin="0,10,0,0" Foreground="#888888"/>
    </Grid>
</UserControl>
